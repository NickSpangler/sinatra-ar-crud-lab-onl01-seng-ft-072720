<h1>Update Article:</h1>

<form action="/articles/<%= @article.id %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <p><label for="title">Title:</label>
    <input id="title" type="text" name="article[title]" placeholder="<%= @article.title %>"></p>
   
    <p><label for="content">Content:</label>
    <textarea id="content" type="textarea" name="article[content]" placeholder="<%= @article.content %>" rows="4" cols="50"></textarea></p>
   
    <button type="submit">Create Article</button>
</form>